from hikka import loader, utils
import asyncio

class RockYourBodyMod(loader.Module):
    """–ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≤—ã–≤–æ–¥ —Å —Å–∏–Ω—Ö—Ä–æ–Ω–∏–∑–∏—Ä–æ–≤–∞–Ω–Ω—ã–º–∏ –∑–∞–¥–µ—Ä–∂–∫–∞–º–∏"""
    strings = {"name": "RockYourBody"}

    async def rockyourbodycmd(self, message):
        """–í—ã–≤–æ–¥ —Ç–µ–∫—Å—Ç–∞ —Å –∑–∞–¥–µ—Ä–∂–∫–æ–π –±—É–∫–≤ = –∑–∞–¥–µ—Ä–∂–∫–µ –º–µ–∂–¥—É —Å—Ç—Ä–æ–∫–∞–º–∏"""
        lyrics_data = [
            ("I wanna da-", 0.06),    # –≠—Ç–∞ –∑–∞–¥–µ—Ä–∂–∫–∞ –±—É–¥–µ—Ç –∏ –º–µ–∂–¥—É –±—É–∫–≤–∞–º–∏, –∏ –ø–æ—Å–ª–µ —Å—Ç—Ä–æ–∫–∏
            ("I wanna dance in the lights", 0.05),
            ("I wanna ro-", 0.07),
            ("I wanna rock your body", 0.08),
            ("I wanna go", 0.08),
            ("I wanna go for a ride", 0.068),
            ("Hop in the music and", 0.07),
            ("Rock your body", 0.08),
            ("Rock that body", 0.069),
            ("Come on, come on", 0.035),
            ("(Rock your body)", 0.05),
            ("Rock that body", 0.03),
            ("Rock that body", 0.049),
            ("Come on, come on", 0.035),
            ("Rock that body", 0.08),
        ]

        msg = await message.respond("üé§ –ù–∞—á–∏–Ω–∞–µ–º...")
        full_text = ""

        for line, line_delay in lyrics_data:
            # –ê–Ω–∏–º–∞—Ü–∏—è –±—É–∫–≤ —Å –∑–∞–¥–µ—Ä–∂–∫–æ–π = line_delay
            current_line = ""
            for char in line:
                current_line += char
                await msg.edit(f"üé§ Rock Your Body üé§\n\n{full_text}{current_line}")
                await asyncio.sleep(line_delay)  # –ó–∞–¥–µ—Ä–∂–∫–∞ –º–µ–∂–¥—É –±—É–∫–≤–∞–º–∏ = –∑–∞–¥–µ—Ä–∂–∫–µ —Å—Ç—Ä–æ–∫–∏
            
            full_text += current_line + "\n"
            await asyncio.sleep(line_delay)  # –¢–∞ –∂–µ –∑–∞–¥–µ—Ä–∂–∫–∞ –ø–æ—Å–ª–µ —Å—Ç—Ä–æ–∫–∏

        await msg.edit(f"üé§ Rock Your Body üé§\n\n{full_text}\n‚úÖ –ó–∞–≤–µ—Ä—à–µ–Ω–æ!")
