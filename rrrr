from hikka import loader, utils
import asyncio

class AnimatedLyricsMod(loader.Module):
    """–ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≤—ã–≤–æ–¥ —Ç–µ–∫—Å—Ç–∞ –ø–æ –±—É–∫–≤–∞–º"""
    strings = {"name": "AnimatedLyrics"}

    async def rockyourbodycmd(self, message):
        """–ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≤—ã–≤–æ–¥ —Ç–µ–∫—Å—Ç–∞ –ø–µ—Å–Ω–∏ –ø–æ –±—É–∫–≤–∞–º"""
        lyrics = [
            "I wanna da-",
            "I wanna dance in the lights",
            "I wanna ro-",
            "I wanna rock your body",
            "I wanna go",
            "I wanna go for a ride",
            "Hop in the music and",
            "Rock your body",
            "Rock that body",
            "Come on, come on",
            "(Rock your body)",
            "Rock that body",
            "Rock that body",
            "Come on, come on",
            "Rock that body"
        ]

        delays = [
            0.06, 0.05, 0.07, 0.08, 0.08,
            0.068, 0.07, 0.08, 0.069, 0.035,
            0.05, 0.03, 0.049, 0.035, 0.08
        ]

        msg = await utils.answer(message, "üé§ –ü–æ–¥–≥–æ—Ç–æ–≤–∫–∞ –∞–Ω–∏–º–∞—Ü–∏–∏...")
        full_text = ""

        for line, delay in zip(lyrics, delays):
            current_line = ""
            for char in line:
                current_line += char
                full_display = f"üé§ Rock Your Body üé§\n\n{full_text}{current_line}"
                await utils.answer(msg, full_display)
                await asyncio.sleep(0.03)  # –ó–∞–¥–µ—Ä–∂–∫–∞ –º–µ–∂–¥—É –±—É–∫–≤–∞–º–∏
            
            full_text += line + "\n"
            await asyncio.sleep(delay)  # –û—Ä–∏–≥–∏–Ω–∞–ª—å–Ω–∞—è –∑–∞–¥–µ—Ä–∂–∫–∞ –º–µ–∂–¥—É —Å—Ç—Ä–æ–∫–∞–º–∏
