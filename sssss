from hikka import loader, utils
import asyncio

class RockYourBodyMod(loader.Module):
    """–ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≤—ã–≤–æ–¥ —Ç–µ–∫—Å—Ç–∞ –ø–µ—Å–Ω–∏ –ø–æ –±—É–∫–≤–∞–º"""
    strings = {"name": "RockYourBody"}

    async def rockyourbodycmd(self, message):
        """–ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –≤—ã–≤–æ–¥ —Ç–µ–∫—Å—Ç–∞ –ø–µ—Å–Ω–∏"""
        lyrics_data = [
            ("I wanna da-", 0.06),
            ("I wanna dance in the lights", 0.05),
            ("I wanna ro-", 0.07),
            ("I wanna rock your body", 0.08),
            ("I wanna go", 0.08),
            ("I wanna go for a ride", 0.068),
            ("Hop in the music and", 0.07),
            ("Rock your body", 0.08),
            ("Rock that body", 0.069),
            ("Come on, come on", 0.035),
            ("(Rock your body)", 0.05),
            ("Rock that body", 0.03),
            ("Rock that body", 0.049),
            ("Come on, come on", 0.035),
            ("Rock that body", 0.08),
        ]

        buffer = ""
        msg = await utils.answer(message, "üé§ Rock Your Body - Starting...")
        last_text = ""

        for line, delay in lyrics_data:
            # –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è —Ç–µ–∫—Å—Ç–∞ –ø–æ –±—É–∫–≤–∞–º
            for i in range(len(line)):
                buffer = line[:i+1]
                current_text = f"üé§ Rock Your Body üé§\n\n{last_text}{buffer}"
                if current_text != await msg.get_text():  # –ü—Ä–æ–≤–µ—Ä–∫–∞ –Ω–∞ –∏–∑–º–µ–Ω–µ–Ω–∏–µ
                    msg = await utils.answer(msg, current_text)
                await asyncio.sleep(0.03)  # –ó–∞–¥–µ—Ä–∂–∫–∞ –º–µ–∂–¥—É –±—É–∫–≤–∞–º–∏
            
            last_text += line + "\n"
            await asyncio.sleep(delay)  # –ó–∞–¥–µ—Ä–∂–∫–∞ –º–µ–∂–¥—É —Å—Ç—Ä–æ–∫–∞–º–∏

        await utils.answer(msg, f"üé§ Rock Your Body üé§\n\n{last_text}\n‚úÖ –ê–Ω–∏–º–∞—Ü–∏—è –∑–∞–≤–µ—Ä—à–µ–Ω–∞!")
