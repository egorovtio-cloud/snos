from telethon import events
import asyncio

@client.on(events.NewMessage(pattern=r"\.perdezh$"))
async def perdezh_handler(event):
    phrases = [
        "–∞ —Ç—ã —á—ë —Ç–∞–º –Ω—é—Ö–∞–µ—à—å?",
        "–ø–µ—Ä–¥—ë–∂",
        "–ö–∞–∫–æ–π –Ω–∞—Ö—É–π –ø–µ—Ä–¥—ë–∂!ü§¢",
        "–Ω—É —è –ø—ë—Ä–Ω—É–ª –≤ —Ä—É–∫—É –∞ —Ç–µ–ø–µ—Ä—å –Ω—é—Ö–∞—éüòç",
        "–¢—ã –ø—ë—Ä–Ω—É–ª —Å–µ–±–µ –≤ —Ä—É–∫—É?! –ê —Ç–µ–ø–µ—Ä—å —ç—Ç–æ –Ω—é—Ö–∞–µ—à—å?!ü§Æ",
        "–ù—É –¥–∞, –∞ —Ç—ã —á—ë –Ω–∏–∫–æ–≥–¥–∞ —Ç–∞–∫ –Ω–µ –¥–µ–ª–∞–ª?)",
        "–ù–µ—Ç –∫–æ–Ω–µ—á–Ω–æ, —ç—Ç–æ –∂–µ –ü–û–õ–ù–´–ô –ü–ò–ó–î–ï–¶, –ü–µ—Ä–¥–µ—Ç—å —Å–µ–±–µ –≤ —Ä—É–∫—É –∞ –ø–æ—Å–ª–µ —ç—Ç–æ –Ω—é—Ö–∞—Ç—åü§¨",
        "–ê —Ç—ã –ø—Ä–æ—Å—Ç–æ –ø–æ–ø—Ä–æ–±—É–πüòä —Ç—ã –ø—Ä–æ—Å—Ç–æ –Ω–µ –ø–æ–Ω–∏–º–∞–µ—à—å –æ—Ç —á–µ–≥–æ —Ç—ã –æ—Ç–∫–∞–∑—ã–≤–∞–µ—à—å—Å—è...ü•∞",
        "–î–ê –ù–ï –ë–£–î–£ –Ø –≠–¢–û –î–ï–õ–ê–¢–¨ü§¢",
        "–ü–æ–ø—Ä–æ–±—É–π –ø–æ–ø—Ä–æ–±—É–πü•¥–Ω–µ –ø–æ–∂–∞–ª–µ–µ—à—åü§§",
        "*–ø–æ—Å–º–æ—Ç—Ä–µ–ª –∫–æ—Å–æ –∞ –ø–æ—Ç–æ–º –ø—ë—Ä–Ω—É–ª –≤ —Ä—É–∫—É –∏ —Å–Ω—é—Ö–∞–ª –≤—Å–µ —Å—Ä–∞–∑—É, –∏ —É–ø–∞–ª –≤ –æ–±–º–æ—Ä–æ–∫*",
        "–ë–õ–Ø–¢–¨ –î–ê –ö–£–î–ê –¢–´ –í–°–Å –°–†–ê–ó–£ –°–ù–Æ–•–ê–õ, –ê–õ–û –°–ö–û–†–ê–Ø –£ –ù–ê–° –¢–£–¢ –ü–ï–†–î–Å–ñ–ù–´–ô –ü–ï–†–ï–î–û–ó",
        "–º–æ—Ä–∞–ª—å: –µ—Å–ª–∏ —Ç—ã –Ω—é—Ö–∞–µ—à—å —Å–≤–æ–π –ø–µ—Ä–¥—ë–∂, —Ç–æ –Ω—é—Ö–∞–π –µ–≥–æ –Ω–µ –≤–µ—Å—å —Å—Ä–∞–∑—Éüòå"
    ]
    
    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –ø–µ—Ä–≤–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
    msg = await event.respond(phrases[0])
    await asyncio.sleep(2.5)
    
    # –†–µ–¥–∞–∫—Ç–∏—Ä—É–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ —Å –∑–∞–¥–µ—Ä–∂–∫–æ–π 2.5 —Å–µ–∫ –º–µ–∂–¥—É —Ñ—Ä–∞–∑–∞–º–∏
    for phrase in phrases[1:]:
        await msg.edit(phrase)
        await asyncio.sleep(2.5)
